<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <section class="form-dark">
    <div class="card card-image" >
      <!--Header-->
      <div class="text-center">
        <h3 class="white-text mb-3 mt-2 font-weight-bold"><strong>SIGN</strong> <a class="green-text font-weight-bold"><strong> UP</strong></a></h3>
      </div>
      <!--Body-->
      <div class="md-form">
        <label for="Form-email5" class="text-body mb-3 mt-2 font-weight-bold">Your Name</label>
        <%= f.text_field :name, class: 'form-control white-text' %>
      </div>
      <div class="md-form">
        <label for="Form-email5" class="text-body mb-3 mt-2 font-weight-bold">Your Email</label>
        <%= f.email_field :email, autofocus: true, class: "form-control white-text", id: "Form-email15"%>
      </div>
      <div class="md-form pb-3">
        <label for="Form-pass5" class="text-body mb-3 mt-2 font-weight-bold">Your Password</label>
        <%= f.password_field :password, class: "form-control white-text", id: "Form-pass5" %>
        <label for="Form-pass5c" class="text-body mb-3 mt-2 font-weight-bold">Confirm Password</label>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control white-text', id: "Form-pass5c" %>
        <div class="form-group">
          <label for="Form-file" class="text-body mb-3 mt-2 font-weight-bold">Add Avatar</label>
          <%= f.file_field :avatar, id: "Form-file" %>
        </div>
        <div class="form-check my-4">
          <input class="form-check-input" type="checkbox" value="" id="defaultCheck17">
          <label class="form-check-label white-text" for="defaultCheck17">Accept the<a href="#" class="green-text font-weight-bold"> Terms and Conditions</a></label>
        </div>
      </div>
      <!--Grid row-->
      <div class="row d-flex align-items-center mb-4">
        <div class="text-center mb-3 col-md-12">
          <%= f.submit "Sign up", class: "btn btn-success btn-block btn-rounded z-depth-1" %>
        </div>
        <!--Grid column-->
      </div>
      <div class="col-md-12">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </section>
<% end %>
